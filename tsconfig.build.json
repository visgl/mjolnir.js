{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "plugins": [
    {
      "transform": "ocular-dev-tools/ts-transform-append-extension",
      "after": true
    },
    {
      "transform": "ocular-dev-tools/ts-transform-append-extension",
      "afterDeclarations": true
    }
  ],
  "include":[
    "src/**/*"
  ]
}
